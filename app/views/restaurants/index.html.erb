<h1>Restaurants</h1>
<ul class="list-group mb-4">
  <% @restaurants.each do |restaurant| %>
    <li class="list-group-item d-flex justify-content-between align-items-center"><%= link_to restaurant["name"], restaurant_path(restaurant["id"]), class: "text-decoration-none" %>
    <%= link_to restaurant_path(restaurant), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-danger btn-sm" do%>
      <i class="fa-regular fa-trash-can"></i>
      <% end %>
    </li>
  <% end %>
</ul>
<%= link_to "Create a new restaurant", new_restaurant_path, class: "btn btn-primary"%>
